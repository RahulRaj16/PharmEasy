<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.zerovirus.Activity.settingsActivity">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:background="@drawable/sett_bg"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_height="@dimen/zero"
        android:layout_width="match_parent"
        android:layout_weight="2">

        <TextView
            android:id="@+id/textGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="132dp"
            android:layout_marginEnd="106dp"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/action_settings"
            android:textColor="@android:color/white"
            android:textSize="@dimen/thirtyfour"
            android:textStyle="bold" />

    </RelativeLayout>


    <GridLayout android:layout_height="@dimen/zero"
        android:layout_width="match_parent"
        android:layout_weight="8"
        android:id="@+id/mainGrid"
        android:rowCount="1"
        android:padding="@dimen/fifty"
        android:columnOrderPreserved="false"
        android:columnCount="1"
        android:alignmentMode="alignMargins">

    <!-- Row 1 -->


    <!-- Column 1 -->



    <androidx.cardview.widget.CardView
        android:id="@+id/grid_editinfo"
        android:layout_height="@dimen/zero"
        android:layout_width="@dimen/zero"
        app:cardElevation="@dimen/eight"
        app:cardCornerRadius="@dimen/eight"
        android:layout_marginBottom="@dimen/form_text_size"
        android:layout_marginRight="@dimen/form_text_size"
        android:layout_marginLeft="@dimen/form_text_size"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="@dimen/twoeighteen"
        android:orientation="horizontal"
        android:layout_margin="@dimen/one"
        android:layout_gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_mode_edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirty"
            android:fontFamily="@font/montserrat"
            android:text="Edit information"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/eighteen"
            android:textStyle="bold" />

</LinearLayout>

</androidx.cardview.widget.CardView>

    <!-- Column 2 -->



    <androidx.cardview.widget.CardView
        android:id="@+id/grid_updatePw"
        android:layout_height="@dimen/zero"
        android:layout_width="@dimen/zero"
        app:cardElevation="@dimen/eight"
        app:cardCornerRadius="@dimen/eight"
        android:layout_marginBottom="@dimen/form_text_size"
        android:layout_marginRight="@dimen/form_text_size"
        android:layout_marginLeft="@dimen/form_text_size"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="@dimen/twosix"
        android:orientation="horizontal"
        android:layout_margin="@dimen/one"
        android:layout_gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_pw_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/twenty"
            android:fontFamily="@font/montserrat"
            android:text="Change Password"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

</LinearLayout>

</androidx.cardview.widget.CardView>

    <!-- Row 2 -->


    <!-- Column 1 -->



    <androidx.cardview.widget.CardView
        android:id="@+id/grid_deleteAcc"
        android:layout_height="@dimen/zero"
        android:layout_width="@dimen/zero"
        app:cardElevation="@dimen/eight"
        app:cardCornerRadius="@dimen/eight"
        android:layout_marginBottom="@dimen/form_text_size"
        android:layout_marginRight="@dimen/form_text_size"
        android:layout_marginLeft="@dimen/form_text_size"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="@dimen/twotwofour"
        android:orientation="horizontal"
        android:layout_margin="@dimen/one"
        android:layout_gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="66dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/fifteen"
            android:src="@drawable/ic_delete_forever" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty"
            android:layout_marginRight="@dimen/thirty"
            android:fontFamily="@font/montserrat"
            android:text="Delete Account"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/eighteen"
            android:textStyle="bold" />

</LinearLayout>

</androidx.cardview.widget.CardView>



    </GridLayout>

</LinearLayout>

</LinearLayout>